{
	"name": "nekorpg",
	"version": "1.0.0",
	"main": "dist/bot.js",
	"type": "module",
	"scripts": {
		"test": "npm run build && node dist/__tests__/runner.js",
		"build": "npx rimraf dist && npx tsc && npx tsc-alias",
		"db": "npx prisma format && npx prisma generate && npx prisma db push",
		"studio": "npm run db && npx prisma studio",
		"bot": "npm run build && node .",
		"prettier": "npx prettier \"src/**/*.ts\" --write",
		"release": "commit-and-tag-version"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"@prisma/client": "^6.13.0",
		"@types/node": "^24.2.0",
		"chalk": "^5.5.0",
		"clone-deep": "^4.0.1",
		"discord.js": "^14.21.0",
		"dotenv": "^17.2.1",
		"ms-utility": "^3.3.0",
		"prisma": "^6.13.0",
		"rimraf": "^6.0.1",
		"tiny-typed-emitter": "^2.1.0",
		"tsc-alias": "^1.8.16",
		"commit-and-tag-version": "^12.5.2"
	},
	"devDependencies": {
		"@types/clone-deep": "^4.0.4"
	},
	"commit-and-tag-version": {
		"changelogFile": "CHANGELOG.md",
		"commitAll": true,
		"tagPrefix": "v",
		"skip": {
			"tag": false,
			"changelog": false
		},
		"types": [
			{
				"type": "feat",
				"section": "Features"
			},
			{
				"type": "fix",
				"section": "Bug Fixes"
			},
			{
				"type": "chore",
				"section": "Chores"
			},
			{
				"type": "refactor",
				"section": "Code Refactoring"
			},
			{
				"type": "perf",
				"section": "Performance Improvements"
			},
			{
				"type": "test",
				"section": "Tests",
				"hidden": true
			},
			{
				"type": "build",
				"section": "Build System",
				"hidden": true
			},
			{
				"type": "ci",
				"hidden": true
			}
		],
		"bumpFiles": [
			{
				"filename": "package.json",
				"type": "json"
			},
			{
				"filename": "package-lock.json",
				"type": "json"
			}
		]
	}
}
